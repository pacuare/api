{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": [
    "git"
  ],
  "deploy": {
    "startCommand": "mise migrate && mise start"
  },
  "packages": {
    "github:tailwindlabs/tailwindcss": "latest"
  },
  "provider": "python",
  "steps": {
    "build": {
      "commands": [
        "...",
        "git init",
        "mise check",
        "mise tailwind",
        "mise build"
      ]
    }
  }
}
